<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Kenbi.DockerTools</AssemblyName>
        <RootNamespace>Kenbi.DockerTools</RootNamespace>
        <IsPackable>true</IsPackable>
        <Company>Kenbi</Company>
        <Product>Kenbi.DockerTools</Product>
        <Version>3.0.4</Version>
        <RepositoryUrl>https://github.com/miguelcouteirorodrigues/DockerTools</RepositoryUrl>
        <RepositoryType>Library</RepositoryType>
        <Description>Tool for creating test databases on Docker</Description>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Kenbi.DockerTools.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Docker.DotNet" Version="3.125.15" />
    </ItemGroup>

</Project>
